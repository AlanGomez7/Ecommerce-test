  <!-- google fonts -->
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Pacifico&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
  </style>


  <!-- Font awesome -->
  <script src="https://kit.fontawesome.com/bce4efe46b.js" crossorigin="anonymous"></script>
  <title>DressRosa</title>
</head>

<body style="font-family: Poppins;">
  <div class="container">
    <section class="vh-100" style="background-color: #ffffff;">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col col-xl-10">
            <div class="card" style="border-radius: 1rem;">
              <div class="row g-0">
                <div class="col-md-6 col-lg-5 d-none d-md-block mt-auto mb-auto">
                  <div class="site-logo text-center mb-5">
                    <h1 class="js-logo-clone" style="font-family:pacifico;">dressrossa</h1>
                  </div>
                  <img src="/images/signup.jpg" alt="login form" class="img-fluid" />
                </div>
                <div class="col-md-6 col-lg-7 d-flex align-items-center">
                  <div class="card-body p-4 p-lg-5 text-black">
                    <form name="form1" action="/signup" method="post" id="form-name">
                      <div class="d-flex align-items-center mb-3 pb-1">
                        <span class="h3 fw-bold mb-0">Get started with a new account.</span>
                      </div>

                      <h6 class="fw-normal mb-3 pb-3">Create an account to get start with your day to day trends.</h6>

                      <%if(error != "") {%>
                        <p style="display: block; font-size: 15px;" class="text-danger fs-6 text ml-5" id="signupAlert">
                          <%= error %>
                        </p>
                      <%}%>

                      <div class="form-outline mb-4 d-flex justify-content-center">
                        <input type="text" name="username" id="form2Example97" class="form-control form-control-lg w-75"
                          placeholder="Username" required />
                      </div>

                      <p style="display: none; font-size: 15px;" class="text-danger fs-6 text ml-5" id="emailAlert">You
                        have entered an invalid email address
                      </p>
                     

                      <div class="form-outline mb-4 d-flex justify-content-center">
                        <input type="email" name="email" id="form2Example17" style="visibility: visible;"
                          class="form-control  form-control-lg w-75" onblur="ValidateEmail(document.form1.email)"
                          placeholder="Email id" />
                      </div>

                      <p style="display: none; font-size: 10px;" class="text-danger fs-6 text ml-5" id="passwordAlert">
                        First character should be capital and should be have 7 to 16 characters</p>

                      <div class="form-outline mb-4 d-flex justify-content-center">
                        <input type="text" name="mobile" id="form2Example26" class="form-control form-control-lg w-75"
                          placeholder="Mobile no:" />
                      </div>

                      <div class="form-outline mb-4 d-flex justify-content-center">
                        <input type="password" name="password" id="form2Example27"
                          class="form-control form-control-lg w-75" placeholder="Password" />
                      </div>


                      <div class="mb-4 d-flex justify-content-center">
                        <button class="btn btn-primary btn-lg w-50 " id="submitBtn">Signup</button>
                      </div>

                      <p class="mb-5 pb-lg-2 d-flex justify-content-center" style="color: #393f81; ">Already have an
                        account? <a href="/login" style="color: #393f81;">login</a>
                      </p>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
  <script src="/js/main1.js ">

  </script>
