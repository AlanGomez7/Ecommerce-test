<%- include("../partials/admin-header") %>

    <section class="content-main">
        <div class="row">
            <div class="col-6">
                <div class="content-header">
                    <h2 class="content-title">Add New Product</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <p class="text-danger">
                    <%=error%>
                </p>
                <div class="card mb-4">
                    <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>1. General info</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <input type="text" placeholder="Type here" name="uniqueId"
                                            class="form-control required" hidden>
                                        <label class="form-label">Product title</label>
                                        <input type="text" placeholder="Type here" name="title"
                                            class="form-control required">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <textarea placeholder="Type here" class="form-control" name="description"
                                            rows="4" required></textarea>
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Brand name</label>
                                        <textarea placeholder="Type here" class="form-control" name="brand" rows="4"
                                            required></textarea>
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-0">

                            <div class="row">
                                <div class="col-md-3">
                                    <h6>2. Pricing</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Cost in USD</label>
                                        <p class="text-danger" id="priceErr" style="display: none;">Invalid Price!</p>
                                        <input type="text" name="price" placeholder="$00.0" class="form-control"
                                            id="product-price" onblur="priceValidation()" multiple required>
                                    </div>
                                </div> <!-- col.// -->
                            </div> <!-- row.// -->
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>3. Category</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <%for(let i=0; i < categories.length; i++){%>
                                            <label class="mb-2 form-check form-check-inline" style="width: 45%;">
                                                <input class="form-check-input" checked="" name="category" type="radio"
                                                    required multiple value="<%= categories[i]._id%>">
                                                <span class="form-check-label">
                                                    <%=categories[i].categoryname%>
                                                </span>
                                            </label>
                                            <%}%>
                                    </div>
                                </div> <!-- col.// -->
                            </div>

                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>4. Stock</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <label class="form-label">Stock Available</label>
                                        <p class="text-danger" id="stockErr" style="display: none;">Invalid no of Stock!
                                        </p>
                                        <input type="text" name="stock" placeholder="No of available peices"
                                            class="form-control" id="product-stock" onblur="stockValidation()" multiple
                                            required>
                                    </div>
                                </div> <!-- col.// -->
                            </div>
                            <!-- row.// -->
                            <hr class="mb-4 mt-0">
                            <div class="row">
                                <div class="col-md-3">
                                    <h6>5. Media</h6>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-4">
                                        <img src="" style="height: auto; width: 75px;"
                                            id="imgView"><br>
                                        <label class="form-label">Images</label>
                                        <input class="form-control" type="file" name="Image" multiple required
                                            onchange="changeImage(event)">
                                    </div>
                                </div><!-- col.// -->
                            </div><!--.row end// -->
                        </div>
                        <div class="d-flex justify-content-center mb-2">
                            <button class="btn btn-md rounded font-sm hover-up" id="publish-btn"
                                type="submit">Publish</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </section> <!-- content-main end// -->
    <script>
        function changeImage(event) {
            document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
        }
    </script>
    <%- include("../partials/admin-footer")%>